<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent">

    <Text
        ohos:id="$+id:reg_text"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:text_size="18vp"
        ohos:top_margin="3vp"
        ohos:text_alignment="center"
        ohos:text="Please Input Your Name And PassWD"
        ohos:layout_alignment="center"
        />



    <DirectionalLayout
        ohos:id="$+id:reg_namesum"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="15vp"
        ohos:left_margin="15vp"
        ohos:right_margin="15vp"
        ohos:background_element="$graphic:background_text_field"
        >
        <Image
            ohos:id="$+id:reg_nameicon"
            ohos:width="50vp"
            ohos:height="50vp"
            ohos:image_src="$media:username"
            />
        <TextField
            ohos:id="$+id:reg_username"
            ohos:width="match_parent"
            ohos:height="50vp"
            ohos:left_padding="13vp"
            ohos:hint="please enter your username"
            ohos:text_size="18vp"
            ohos:element_selection_left_bubble="$media:icon"
            ohos:text="mrbird"
            />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:below="$id:reg_namesum"
        ohos:id="$+id:reg_passwordsum"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="15vp"
        ohos:left_margin="15vp"
        ohos:right_margin="15vp"
        ohos:background_element="$graphic:background_text_field"
        >
        <Image
            ohos:id="$+id:reg_passworldicon"
            ohos:width="50vp"
            ohos:height="50vp"
            ohos:image_src="$media:password"
            />
        <TextField
            ohos:id="$+id:register_userpasswd"
            ohos:width="match_parent"
            ohos:height="50vp"
            ohos:text_size="18vp"
            ohos:left_padding="13vp"
            ohos:hint="please enter your password"
            ohos:text="1234qwer"
            />
    </DirectionalLayout>


    <Button
        ohos:id="$+id:btn_regster"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:text="Register"
        ohos:horizontal_center="true"
        ohos:text_size="20vp"
        ohos:left_margin="30vp"
        ohos:right_margin="30vp"
        ohos:top_margin="15vp"
        ohos:below="$id:reg_passwordsum"
        ohos:background_element="$graphic:loginbtn"
        ohos:text_color="#f8f8f8"
        ohos:bottom_margin="10vp"
        />

</DirectionalLayout>